<div class="container p-6 mx-auto">
<h1 class="text-3xl font-bold text-center my-8 pt-20" style="margin-top: -2rem;">Associations Testing</h1>


<div class="container mx-auto mt-8">
  <h2 class="mb-4 text-xl font-semibold text-gray-700">Authors and Books</h2>
  <table class="min-w-full bg-white border rounded-lg shadow-md">
    <thead>
      <tr>
        <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Author</th>
        <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Books</th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td class="px-6 py-4 border-b text-gray-800 font-semibold"><%= author.name %></td>
          <td class="px-6 py-4 border-b">
            <ul>
              <% author.books.each do |book| %>
                <li>
                  <%= link_to book.title, book_path(book), class: "text-blue-500 hover:underline" %>
                </li>
              <% end %>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="mt-4">
      <%= link_to 'View All Authors', authors_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
  </div>
</div><br>

<div class="container mx-auto mt-8">
  <section class="bg-white border rounded-lg shadow-md p-6">
    <h2 class="mb-4 text-xl font-semibold text-gray-700">Users and Profiles</h2>
    <table class="min-w-full">
      <thead>
        <tr>
          <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Email</th>
          <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Profile</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="px-6 py-4 border-b text-gray-800 font-semibold"><%= user.email %></td>
              <td class="px-6 py-4 border-b text-gray-800"><%= user.profile ? user.profile.name : "No profile" %></td>
              <td class="px-6 py-4 border-b text-gray-800"><%= user.profile ? user.profile.gender : "No profile" %></td>
              <td class="px-6 py-4 border-b text-gray-800"><%= user.profile ? user.profile.bio : "No profile" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <div class="mt-4">
      <%= link_to 'View All Users', users_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
  </div>
</div>
<br>
<div class="container mx-auto mt-8">
  <section class="bg-white border rounded-lg shadow-md p-6">
    <h2 class="mb-4 text-xl font-semibold text-gray-700">Appointments</h2>
    <table class="min-w-full">
      <thead>
        <tr>
          <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Appointment ID</th>
          <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Physician</th>
          <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Patient</th>
          <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Date & Time</th>
          <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% counter = 1 %>
        <% @appointments.each do |appointment| %>
          <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4 text-gray-800 font-semibold">
              <%= link_to "#{counter}", appointment_path(appointment), class: "text-blue-500 hover:underline" %>
            </td>
            <td class="px-6 py-4">
              <%= appointment.physician.name if appointment.physician %>
            </td>
            <td class="px-6 py-4">
              <%= appointment.patient.name if appointment.patient %>
            </td>
            <td class="px-6 py-4">
              <%= appointment.appointment_date.strftime("%B %d, %Y %I:%M %p") %>
            </td>
            <td class="px-6 py-4">
              <%= link_to "Edit", edit_appointment_path(appointment), class: "text-blue-500 hover:underline mr-4" %>
              <%= link_to "Delete", appointment, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
            </td>
          </tr>
          <% counter += 1 %>
        <% end %>
      </tbody>
    </table>
  </section>
  <div class="mt-4">
    <%= link_to "New Appointment", new_appointment_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
</div>
</div>
