<div class="container p-6 mx-auto">
  <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Appointment Details</h1>

  <div class="container mx-auto mt-8">
    <table class="min-w-full bg-white border rounded-lg shadow-md">
      <thead>
        <tr>
          <th class="px-6 py-4 text-left text-sm font-medium text-gray-500 uppercase border-b">Details</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="px-6 py-4 border-b">
            <ul class="list-none space-y-4">
              <li><strong>Physician:</strong> <%= @appointment.physician.name %></li>
              <li><strong>Patient:</strong> <%= @appointment.patient.name %></li>
              <li><strong>Date:</strong> <%= @appointment.appointment_date.strftime("%B %d, %Y %I:%M %p") %></li>
              <li><strong>Location:</strong> <%= @appointment.location %></li>
              <li><strong>Status:</strong> <%= @appointment.status %></li>
              <li><strong>Notes:</strong> <%= @appointment.notes %></li>
            </ul>
            <br>
            <div class="mt-6">
              <ul class="space-y-2">
                <li>
                  <%= link_to "Edit", edit_appointment_path(@appointment), class: "text-yellow-500 hover:underline" %>
                </li>
                <li>
                  <%= link_to "Delete", @appointment, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
                </li>
                <li>
                  <%= link_to "Back", appointments_path, class: "text-blue-500 hover:underline" %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
