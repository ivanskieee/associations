<%= form_with model: user do |form| %>
  <div class="form-container">
    <div class="form-group">
      <%= form.label :email, class: 'form-label' %>
      <%= form.text_field :email, class: 'form-input' %>
    </div>

    <%= form.fields_for :profile do |profile_form| %>
      <div class="form-group">
        <%= profile_form.label :name, class: 'form-label' %>
        <%= profile_form.text_field :name, class: 'form-input' %>
      </div>
      <div class="form-group">
        <%= profile_form.label :gender, class: 'form-label' %>
        <%= profile_form.text_field :gender, class: 'form-input' %>
      </div>
      <div class="form-group">
        <%= profile_form.label :bio, class: 'form-label' %>
        <%= profile_form.text_field :bio, class: 'form-input' %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.submit 'Submit', class: 'submit-btn' %>
    </div>
  </div>
<% end %>

<style>
  .form-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 400px;
    margin: 20px auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  .form-group {
    width: 100%;
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    font-weight: bold;
    margin-bottom: 8px;
    text-align: left;
    color: #333;
  }

  .form-input {
    width: calc(100% - 20px);
    padding: 10px;
    font-size: 16px;
    border-radius: 4px;
    border: 1px solid #ccc;
    outline: none;
  }

  .form-input:focus {
    border-color: #4CAF50;
    box-shadow: 0 0 5px rgba(76, 175, 80, 0.4);
  }

  .submit-btn {
    width: calc(100% - 20px);
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }

  .submit-btn:hover {
    background-color: #45a049;
  }
</style>
